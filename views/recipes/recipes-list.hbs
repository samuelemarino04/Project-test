<h2>Recipes</h2>
<hr>
<div class="row">




    {{#each recipes}}
    <div class="col-12 card text-center mt-3 bg-light pt-3">
        <h2>{{title}}</h2>
        <hr>
        <p>{{description}}</p>

        <div class="row  text-start">
            <ul>
                {{#each ingredients}}
                <div class="col-6 ps-3 text-start">
                    <li>
                        <h6>{{ingrName}}:{{ingrQuantity}}</h6>
                    </li>
                </div>
                {{/each}}
            </ul>
        </div>

        <div class="row  text-end">
            <div class="col-12">

                <a href="/recipes/{{_id}}/details" class=" btn btn-dark">Details</a>
                {{#each author}}
                <h6>Created by: {{username}}</h6>
                {{/each}}
            </div>
        </div>


    </div>
    {{/each}}



</div>